rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reads and writes to newsletter_subscribers collection
    match /newsletter_subscribers/{document} {
      // Allow reads for everyone (for admin dashboard and API routes)
      allow read: if true;
      // Allow creates with validation
      allow create: if request.resource.data.email is string 
                     && request.resource.data.email.matches('.*@.*\\..*')
                     && request.resource.data.language is string
                     && request.resource.data.isActive == true;
      // Only allow updates/deletes from authenticated admin users
      allow update, delete: if request.auth != null;
    }
    
    // Allow reads for settings collection (for Christmas schedule)
    match /settings/{document} {
      allow read: if true;
      // Only allow writes from authenticated admin users
      allow write: if request.auth != null;
    }
    
    // Allow reads for holiday_schedules collection (for holiday schedules)
    match /holiday_schedules/{document} {
      allow read: if true;
      // Only allow writes from authenticated admin users
      allow write: if request.auth != null;
    }
    
    // Allow reads for announcements collection (for announcements)
    match /announcements/{document} {
      allow read: if true;
      // Only allow writes from authenticated admin users
      allow write: if request.auth != null;
    }
    
    // Allow reads and writes for emailTemplates collection (for saved email templates)
    match /emailTemplates/{document} {
      // Allow reads for authenticated users
      allow read: if request.auth != null;
      // Only allow writes from authenticated admin users
      allow write: if request.auth != null;
    }
    
    // Analytics collection - allow public writes for tracking, authenticated reads for admin
    match /analytics/{document} {
      // Allow public writes for page view tracking (client-side)
      allow write: if true;
      // Allow reads only for authenticated admin users
      allow read: if request.auth != null;
    }
    
    // AcronMetrics collection - for website performance & ROI analytics
    match /acronMetrics/{siteId}/{collection}/{document} {
      // Allow public writes for client-side tracking (conversions, performance, seo)
      allow write: if collection in ['conversions', 'performance', 'seo', 'analytics'];
      
      // Allow reads only for authenticated admin users
      allow read: if request.auth != null;
    }
    
    // AcronMetrics nested collections
    match /acronMetrics/{siteId}/conversions/{conversionId} {
      allow write: if true; // Public writes for tracking conversions
      allow read: if request.auth != null; // Admin reads
    }
    
    match /acronMetrics/{siteId}/performance/{performanceId} {
      allow write: if true; // Public writes for tracking performance
      allow read: if request.auth != null; // Admin reads
    }
    
    match /acronMetrics/{siteId}/seo/{seoId} {
      allow write: if true; // Public writes for SEO scores
      allow read: if request.auth != null; // Admin reads
    }
    
    match /acronMetrics/{siteId}/analytics/{analyticsId} {
      allow write: if true; // Public writes for daily stats
      allow read: if request.auth != null; // Admin reads
    }
    
    // Default rule: allow reads for authenticated users only
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // All writes should go through Admin SDK
    }
  }
}

